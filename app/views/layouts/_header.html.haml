%header.navbar-fixed-left
  %nav{:role => "navigation"}
    .navbar-header
      %img{:alt => "", :src => "../assets/Logo.png"}/
      = link_to "Star Listz", root_path, { class: "navbar-brand" }
    / Collect the nav links, forms, and other content for toggling
    /#collapse-menu.collapse.in


    %ul.nav
      %li.collapse-down.menu-trigger
        = link_to root_path do
          %i.fas.fa-home
          //%i.icono-home
          %span.main-tit TOP

      %li.collapse-down
        %a.menu-trigger
          %i.fas.fa-list-ul
          //%i.icono-list
          %span.main-tit プレイリスト
        %ul.collapse-down-menu
          %li
            = link_to new_list_path do 
              アップロード
          %li
            = link_to 'チャート', chart_path(genre: Constants::GENRE, sort: Constants::SORT)
          %li
            = link_to genre_path do
              ジャンル


      %li.collapse-down.menu-trigger
        = link_to search_path do
          %i.fas.fa-search
          //%i.icono-search
          %span.main-tit サーチ
      %li.collapse-down
        %a.menu-trigger
          %i.fas.fa-cog
          //%i.icono-gear
          %span.main-tit セッティング
        %ul.collapse-down-menu
          - if user_signed_in?
            %li
              =link_to 'マイページ', current_user
            %li
              =link_to 'ログアウト', destroy_user_session_path, method: :delete
          - else
            %li
              =link_to 'サインアップ', new_user_registration_path
            %li.login
              =link_to 'ログイン', new_user_session_path

          %li
            %a{:href => "#"} Playlistzについて
          
          %li
            %a{:href => "#"} お問い合わせ