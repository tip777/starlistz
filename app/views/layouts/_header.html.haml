

.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
  %header.mdl-layout__header
    = link_to root_path, { class: "header__brandImg is__PC" } do
      %img{:alt => "", :src => "../assets/Logo.png"}
    .mdl-layout__header-row
      
      = link_to root_path, { class: "mdl-layout-title is__PC" } do
        %span StarListz
      / Add spacer, to align navigation to the right
      .mdl-layout-spacer
      / Navigation. We hide it in small screens.
      %nav.mdl-navigation.mdl-layout--large-screen-only{:role => "navigation"}


        .header__form.is__PC
          = search_form_for  @q, html: {class: 'navbar-form' }, url: search_path, enforce_utf8: false do |f|
