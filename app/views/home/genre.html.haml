.container-fluid.l-container
  .l-genre-search
    %h2.content-title
      ジャンル検索
    = form_tag(url_for(:action => 'genre'), :remote => true) do
      = text_field_tag :search
      = submit_tag "検索"
      %i.glyphicon.glyphicon-search
    #genre_search= render 'genrelist', tag: @tag

  .l-genre-ranking
    %h2.content-title
      ジャンル TOP20
    = render 'genrelist', tag: @tag_top

= render :partial => "layouts/footer"

