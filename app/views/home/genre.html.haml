.content-container
  %ul.tab
    %li search
    %li ranking
  // ここが切り替わる部分
  .content
    #search.area
      %h1
        | ジャンル検索
      = form_tag(url_for(:action => 'genre'), :remote => true) do
        = text_field_tag :search
        = submit_tag "検索"
      #genre_search= render 'genrelist', tag: @tag

    #ranking.area
      %h1
        | ジャンル TOP20
      = render 'genrelist', tag: @tag_top

= render :partial => "layouts/footer"

