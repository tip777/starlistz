= simple_form_for @list do |f|
  .field_playlist
    .list_title
      = f.input :title, label: "プレイリスト名"
    .list_description{:style => "margin-bottom: 50px;"}
      = f.input :description, label: "詳細"
    - @list.tracks.order(:no).each_with_index do |tracks, i|
      = f.fields_for :tracks, tracks do |track|
        .field_tracks{:style => "margin-bottom: 50px;"}
          .track_song
            = track.input :song, label: "曲名#{i+1}"
          .track_artist
            = track.input :artist, label: "アーティスト"
          .track_reco
            = track.input :recommend, label: "おすすめ", as: :boolean, boolean_style: :inline
    .field_track_add
      = link_to_add_association '曲 追加', f, :tracks
            
