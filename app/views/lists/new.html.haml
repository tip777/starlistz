- if @list.errors.any?
  #error_explanation.alert.alert-danger
    %ul
      - @list.errors.full_messages.each do |message|
        %li= message

.l__listShow.l__listEdit
  = simple_form_for @list do |f|
    .l__playlist
      .l__playlistCore.clearfix
        .playlist__img
          .l__img
            = image_tag @list.image.url(:thumb)
          .trackCount= f.input :image, as: :file, label: false, :input_html => {id: "inputFileList", style: "display:none;"}
          // ファイル選択　代わりのボタン
          %button#inputFileSub{type: "button"} ファイルを選択
          // ファイル名表示用
          %p#subTxt　
          
        .playlist__text
          .playlist__title
            = f.input :title, label: "プレイリスト名", placeholder: 'プレイリスト名（必須５０文字まで）'
          .list_genre
            = f.label :playlist_genre, "ジャンル"
            = f.text_field :tag_list, value: f.object.tag_list.to_s, placeholder: 'ジャンル（#HIPHOP #RAP...）'
          .span.playlist__price
            = f.label :price do
              価格
              %span.form-require 必須
            .price-input
              ￥
              = f.select :price, options_for_select(Constants::AMOUNT, selected: f.object.price), {}, { class: 'js-hide-search_listprice', data: { placeholder: '選択してください' } }

      .span.playlist__discription
        = f.label :description, "プレイリスト説明"
        = f.input :description, label: false, placeholder: 'プレイリストの説明（400文字以内）' + "\n" + '例)　このリストは自分が特にインスピレーションもらった曲を集めました。', :input_html => {:rows => 5}
      
    #track_section.table-sortable
      #cont_desc_newedit.l__tracks
        %table
          %tbody
            %tr
              %td
                %span.favoriteStar
                  おすすめ
              %td.track_no_sample
              %td
                %span 曲名（必須９０文字まで）
                %span.trackArtist アーティスト名（必須５０文字まで）
              %td
                %a.modal-syncer.js__listBack{"data-target" => "modal-content-0"}
                  %span.trackComment
                    曲の説明
      
      = f.fields_for :tracks, @list.tracks.sort_by(&:row_order) do |track|
        = render 'track_fields', f: track
          
    .field_track_add
      = link_to_add_association '曲追加', f, :tracks,:"data-association-insertion-node" => "#track_section",:"data-association-insertion-method" => "append"

    .actions
      = f.submit "作成"
      
