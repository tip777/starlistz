%tr.track_item{data: { model_name: f.class.name.underscore, update_url: list_sort_path(f) }}
  %td= f.text_field :artist
  %td= f.text_field :song
  %td
    // = f.input :recommend, label: "お気に入り", as: :boolean, boolean_style: :inline, input_html: { id: "custom-checkbox#{f.index}", class: "custom-check-box" }
    // %label{:for => "custom-checkbox#{f.index}", class: "track_recommend"}
    = f.input :recommend, label: "お気に入り", as: :boolean, boolean_style: :inline, label_html: { id: "custom-checkbox#{f.index}", class: 'track_recommend' }, input_html: { id: "custom-checkbox#{f.index}", class: "custom-check-box" }
  %td= f.hidden_field :row_order, class: 'sort_order'
  %td= link_to_remove_association 'remove', f, { wrapper_class: 'track_item' }
