.track_item.l__tracks
  %table
    %tbody
      %tr
        %td
          = f.input :recommend, label: ".", as: :boolean, boolean_style: :inline, label_html: { id: "custom-checkbox#{f.index}", class: 'track_recommend' }, input_html: { id: "custom-checkbox#{f.index}", class: "custom-check-box" }
        %td.track_no
        %td.other
          %span.trackSong= f.text_field :song, placeholder: "曲名"
          %span.trackArtist= f.text_field :artist, placeholder: "アーティスト名"
          %span#description{:style => "display: none;"}= f.text_area :description, placeholder: "曲の説明", input_html: {rows: 2}
        %td
          %span.comment
            - if f.object.description != nil
              - if f.object.description.length > 0
                %i.material-icons.comment_add.already comment
              - else
                %i.material-icons.comment_add.still add_comment
            - else
              %i.material-icons.comment_add.still add_comment
        %td
          %span.track_delete
            = link_to_remove_association f, { wrapper_class: 'track_item' } do
              %i.material-icons.still delete_forever
        %td
          %span.track_sorticon
            %i.material-icons.still dehaze
        %td
          %span.sort_no= f.hidden_field :row_order, class: 'sort_order'



    
