%h2 パスワード再設定
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: "新しいパスワード", required: true, autofocus: true, hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length)
    = f.input :password_confirmation, label: "新しいパスワード確認", required: true
  .form-actions
    = f.button :submit, "新しいパスワードを保存する"
= render "devise/shared/links"
