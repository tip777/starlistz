.container-fluid.l-container
  .l-profile
    .ll-profile
      = image_tag @user.user_profile.avatar.url(:thumb)

    .rr-profile
      %h2 #{@user.name}
      = render 'follow_form' if user_signed_in?

      %h3 プロフィール
      = @user.user_profile.description

      %h3 ジャンル
      = render 'layouts/tag_list', tag_list: @user.tag_list

      %h3 フォロワー
      = "#{@follower} 人"

      %h3 プレイリスト数
      = @list.count

      //ログインしていたら編集できる
      - if is_signin
        - if is_signed(current_user.id, @user.id)
          .text-left
            =link_to 'プロフィール編集', edit_user_registration_path, class: "go-edit"


  %h2.content-title プレイリスト一覧
  = render :partial => "lists/list", locals: {lists: @list, flg: false}
