.sc
  .l-profile
    .ll-profile
      = image_tag @user.user_profile.avatar.url(:thumb)

    .rr-profile
      //ログインしていたら編集できる
      - if is_signin
        - if is_signed(current_user.id, @user.id)
          .l__edit
            =link_to 'プロフィール編集', edit_user_registration_path, class: "edit__profileButton"

            %span.edit__settingButton 編集


          = link_to "https://dashboard.stripe.com/oauth/authorize?response_type=code&client_id=ca_CU55IGFy2bacKCDlhMVgJ81nDmPqAeDR&scope=read_write" do
            = image_tag("stripe.png")

      %h2.nm #{@user.name}
      = render 'follow_form', user: @user if user_signed_in?

      .description
        = @user.user_profile.description

      %h3 ユーザージャンル
      = render 'layouts/tag_list', tag_list: @user.tag_list

      .numbers
        %h3
          = "#{@follower}"
          %span フォロワー

        %h3
          = "#{@mylist.count}"
          %span プレイリスト

  .sc
    %ul.tab
      %li{ class: controller.action_name == 'playlist' ? 'active' : '' }
        = link_to "プレイリスト一覧", users_playlist_path(@user)
      - if is_signin && is_signed(current_user.id, @user.id)
        %li{ class: controller.action_name == 'purchasehistory' ? 'active' : '' }
          = link_to "購入履歴", users_purchasehistory_path(current_user)
