- set_meta_tags title: "検索結果"

= render :partial => "searches/search_header"


.l__search__tab__box
    %h2 ユーザー
    - if @search_user != nil and not @search_user.empty?
        = render "users/user", users: @user_pages.limit(3)
        
    = link_to "すべて見る", { :controller => "searches", :action => "user", q: params[:q] }, class: "link"
    
    %h2 プレイリスト
    - if @search_list != nil and not @search_list.empty?
        = render "lists/list", lists: @list_pages.limit(3), customer: @customer
        
    = link_to "すべて見る", { :controller => "searches", :action => "playlist", q: params[:q] }, class: "link"